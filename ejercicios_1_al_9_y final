# Ejercicio final

mi_cadena = "Hola estimados miembros de Devcampp"
indice_hola = mi_cadena.find("Hola")
print(f"La primera aparición de 'Hola' comienza en el índice {indice_hola}.")

cadena_modificada = mi_cadena.replace("Hola", "adiós")
print(cadena_modificada)
